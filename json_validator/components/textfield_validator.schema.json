{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "http://lenra.me/textfield_validator.schema.json",
    "title": "TextField",
    "description": "Element of type TextField",
    "type": "object",
    "properties": {
        "type": {
            "description": "The type of the element",
            "type": "string",
            "pattern": "^textfield$"
        },
        "value": {
            "descritpion": "the value displayed in the element",
            "type": "string"
        },
        "listeners": {
            "properties": {
                "onChange": {
                    "$ref": "listeners/onchange_validator.schema.json"
                }
            },
            "minProperties": 1,
            "additionalProperties": false
        }
    },
    "required": [
        "type",
        "value"
    ],
    "additionalProperties": false
}