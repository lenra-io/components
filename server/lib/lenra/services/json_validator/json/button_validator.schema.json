{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://lenra.me/button_validator.schema.json",
    "title": "Button",
    "description": "Element of type Button",
    "type": "object",
    "properties": {
        "type": {
            "description": "The type of the element",
            "type": "string",
            "pattern": "button"
        },
        "value": {
            "descritpion": "the value displayed in the element",
            "type": "string"
        },
        "listeners": {
            "description": "Listeners on the element",
            "$ref": "listeners_validator.schema.json"
        }
    },
    "required": [
        "type",
        "value",
        "listeners"
    ],
    "additionalProperties": false
}